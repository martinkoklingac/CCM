@addTagHelper CCMAdmin.TagHelpers.*, CCMAdmin

@{
    ViewData["Title"] = "Home Page";
}

@section styles {
    <link rel="stylesheet" href="~/js/root/home.css" asp-append-version="true" />
}

<div class="style-catalog">
    <table>
        <thead>
            <tr>
                <th>Buttons</th>
                <th colspan="4"></th>
            </tr>
            <tr>
                <th>Size</th>
                <th>Action</th>
                <th>Submit</th>
                <th>Cancel</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td rowspan="2">Normal</td>
                <td>
                    <div class="element-container">
                        <button class="ccm-btn normal action-btn">text</button>
                    </div>
                    <div class="code-container">
                        <button-code class="ccm-btn normal action-btn" text="text" />
                    </div>
                </td>
                <td>
                    <div class="element-container">
                        <button class="ccm-btn normal submit-btn">text</button>
                    </div>
                    <div class="code-container">
                        <button-code class="ccm-btn normal submit-btn" text="text" />
                    </div>
                </td>
                <td>
                    <div class="element-container">
                        <button class="ccm-btn normal cancel-btn">text</button>
                    </div>
                    <div class="code-container">
                        <button-code class="ccm-btn normal cancel-btn" text="text" />
                    </div>
                </td>
                <td>
                    <div class="element-container">
                        <button class="ccm-btn normal delete-btn">text</button>
                    </div>
                    <div class="code-container">
                        <button-code class="ccm-btn normal delete-btn" text="text" />
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <div class="element-container">
                        <button class="ccm-btn normal action-btn" disabled>text</button>
                    </div>
                    <div class="code-container">
                        <code>@("<button class='ccm-btn normal action-btn' disabled>text</button>")</code>
                    </div>
                </td>
                <td>
                    <div class="element-container">
                        <button class="ccm-btn normal submit-btn" disabled>text</button>
                    </div>
                    <div class="code-container">
                        <code>@("<button class='ccm-btn normal submit-btn' disabled>text</button>")</code>
                    </div>
                </td>
                <td>
                    <div class="element-container">
                        <button class="ccm-btn normal cancel-btn" disabled>text</button>
                    </div>
                    <div class="code-container">
                        <code>@("<button class='ccm - btn normal cancel-btn' disabled>text</button>")</code>
                    </div>
                </td>
                <td>
                    <div class="element-container">
                        <button class="ccm-btn normal delete-btn" disabled>text</button>
                    </div>
                    <div class="code-container">
                        <code>@("<button class='ccm-btn normal delete-btn' disabled>text</button>")</code>
                    </div>
                </td>
            </tr>
        </tbody>
    </table>

    <table>
        <thead>
            <tr>
                <th>Image Buttons</th>
                <th colspan="3"></th>
            </tr>
            <tr>
                <th>Size</th>
                <th>Submit</th>
                <th>Cancel</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td rowspan="2">Normal</td>
                <td>
                    <div class="element-container">
                        <button class="ccm-ico-btn normal submit-btn"></button>
                    </div>
                    <div class="code-container">
                        <code>@("<button class='ccm-ico-btn normal submit-btn'></button>")</code>
                    </div>
                </td>
                <td>
                    <div class="element-container">
                        <button class="ccm-ico-btn normal cancel-btn"></button>
                    </div>
                    <div class="code-container">
                        <code>@("<button class='ccm-ico-btn normal cancel-btn'></button>")</code>
                    </div>
                </td>
                <td>
                    <div class="element-container">
                        <button class="ccm-ico-btn normal delete-btn"></button>
                    </div>
                    <div class="code-container">
                        <code>@("<button class='ccm-ico-btn normal delete-btn'></button>")</code>
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <div class="element-container">
                        <button class="ccm-ico-btn normal submit-btn" disabled></button>
                    </div>
                    <div class="code-container">
                        <code>@("<button class='ccm-ico-btn normal submit-btn' disabled></button>")</code>
                    </div>
                </td>
                <td>
                    <div class="element-container">
                        <button class="ccm-ico-btn normal cancel-btn" disabled></button>
                    </div>
                    <div class="code-container">
                        <code>@("<button class='ccm-ico-btn normal cancel-btn' disabled></button>")</code>
                    </div>
                </td>
                <td>
                    <div class="element-container">
                        <button class="ccm-ico-btn normal delete-btn" disabled></button>
                    </div>
                    <div class="code-container">
                        <code>@("<button class='ccm-ico-btn normal delete-btn' disabled></button>")</code>
                    </div>
                </td>
            </tr>
        </tbody>
    </table>
</div>