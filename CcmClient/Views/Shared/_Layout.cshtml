<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <link href="~/buildframework/vendor.css" rel="stylesheet" />
    <script src="~/buildframework/vendor.bundle.js" asp-append-version="true"></script>
    @*<script src="~/build/root_layout.entry/root_layout.entry.build.js" asp-append-version="true"></script>*@
</head>
<body>
    <div>
        <div>
            @Html.AntiForgeryToken()

            <ul class="nav">

                <li class="nav-item">
                    <a class="nav-link" asp-action="Index" asp-controller="Index">Home</a>
                </li>

                @if (User.Identity.IsAuthenticated)
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Logout" asp-controller="Auth" asp-area="Security">Logout</a>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Login" asp-controller="Auth" asp-area="Security">Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Register" asp-controller="Auth" asp-area="Security">Register</a>
                    </li>
                }


                <li class="nav-item">
                    <a class="nav-link" asp-action="Test" asp-controller="Index">Auth Test</a>
                </li>
            </ul>
        </div>

        @RenderBody()
    </div>

    @RenderSection("Scripts", false)
</body>
</html>
